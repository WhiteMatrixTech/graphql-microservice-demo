{
  "name": "graphql-microservice-demo",
  "version": "0.0.0",
  "description": "An Example using Apollo Federation",
  "private": true,
  "scripts": {
    "start:dev:gateway": "yarn workspace gateway start:dev",
    "start:dev:service:user": "yarn workspace user start:dev",
    "start:dev:service:reservation": "yarn workspace reservation start:dev",
    "start:dev": "concurrently \"npm:start:dev:service:*\" \"npm:start:dev:gateway\""
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "eslint": "^7.31.0",
    "eslint-config-willin": "^1.0.6",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.[jt]s": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "workspaces": [
    "gateway",
    "services/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WhiteMatrixTech/graphql-microservice-demo.git"
  },
  "keywords": [],
  "author": "Willin Wang <willin@willin.org> (https://github.com/willin)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/WhiteMatrixTech/graphql-microservice-demo/issues"
  },
  "homepage": "https://github.com/WhiteMatrixTech/graphql-microservice-demo#readme"
}
